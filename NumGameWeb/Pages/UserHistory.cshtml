@page "/UserHistory"
@model NumGameWeb.Pages.UserHistoryModel
@{
    ViewData["Title"] = "Payment History";
}
@{
    int totalPages = Model.TotalPages;
    int currentPage = Model.CurrentPage;
    int maxPagesToShow = 3; // Number of pages to show in pagination

    int startPage, endPage;

    if (totalPages <= maxPagesToShow)
    {
        startPage = 1;
        endPage = totalPages;
    }
    else
    {
        if (currentPage <= maxPagesToShow / 2)
        {
            startPage = 1;
            endPage = maxPagesToShow;
        }
        else if (currentPage + maxPagesToShow / 2 >= totalPages)
        {
            startPage = totalPages - maxPagesToShow + 1;
            endPage = totalPages;
        }
        else
        {
            startPage = currentPage - maxPagesToShow / 2;
            endPage = startPage + maxPagesToShow - 1;
        }
    }
}
<div class="back-button">
    <a href="/">
        <i class="fas fa-arrow-left"></i> Back
    </a>
</div>
<div class="container mt-5">
    <h1 class="text-center">Payment History</h1>
    <table id="dataTable" class="table table-striped table-bordered bg-light" style="width:100%">
        <thead>
            <tr>                
                <th>Amount</th>
                <th>Betting Number</th>
                <th>Type</th>                
                <th>Bet On</th>               
            </tr>
        </thead>
        <tbody>
            @if (Model.UserHistories != null)
            {
                foreach (var item in Model.UserHistories)
                {
                    <tr>
                        <td>@item.amount</td>
                        <td>@item.number</td>
                        <td><span class="badge bg-@(item.type=="CREDIT"?"success":"danger") badge-light">@item.type</span></td>
                        <td>@item.created_at.ToString("dd/MM/yyyy hh:mm:ss")</td>
                    </tr>
                }
            }
            
        </tbody>
    </table>
    <div class="container-fluid">

    <nav aria-label="Pagination" class="mb-5">
            <ul class="pagination justify-content-center pagination-sm mt-3 mb-3">
        <li class="page-item @(currentPage == 1 ? "disabled" : "")">
            <a class="page-link" href="?page=@(currentPage - 1)" tabindex="-1">Previous</a>
        </li>
        
        @if (startPage > 1)
        {
            <li class="page-item">
                <a class="page-link" href="?page=1">1</a>
            </li>
            @if (startPage > 2)
            {
                <li class="page-item disabled">
                    <a class="page-link" href="#" tabindex="-1">...</a>
                </li>
            }
        }
        
        @for (int pageNumber = startPage; pageNumber <= endPage; pageNumber++)
        {
            <li class="page-item @(pageNumber == currentPage ? "active" : "")">
                    <a class="page-link" href="?page=@pageNumber">@pageNumber</a>
            </li>
        }
        
        @if (endPage < totalPages)
        {
            @if (endPage < totalPages - 1)
            {
                <li class="page-item disabled">
                    <a class="page-link" href="#" tabindex="-1">...</a>
                </li>
            }
            <li class="page-item">
                <a class="page-link" href="?page=@totalPages">@totalPages</a>
            </li>
        }
        
        <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
            <a class="page-link" href="?page=@(currentPage + 1)">Next</a>
        </li>
    </ul>
</nav>
    </div>
</div>
@section Scripts{
    <script>
        $(document).ready(function () {
            $('#dataTable').DataTable({
                info: false,
                ordering: true,
                paging: false
            });
        });
    </script>
}